        let current = 0;
        const responses = new Array(40).fill(null);
        const types = ['C', 'S', 'M', 'F'];

        function sanitize(str) {
            return str.replace(/[<>&"']/g, char => ({ '<': '<', '>': '>', '&': '&amp;', '"': '&quot;', "'": '&#39;' }[char]));
        }

        function startTest() {
            const nome = document.getElementById('nome').value.trim();
            const idade = document.getElementById('idade').value.trim();
            const email = document.getElementById('email').value.trim();
            if (!nome || !idade || !email) {
                alert('Nome, idade e e-mail são obrigatórios.');
                return;
            }
            document.getElementById('intro').classList.add('hidden');
            document.getElementById('test').classList.remove('hidden');
            generateQuestions();
            loadQuestion(current);
        }

        function generateQuestions() {
            const container = document.getElementById('questions');
            container.innerHTML = '';
            questions.forEach((_, index) => {
                const div = document.createElement('div');
                div.className = `question ${index === 0 ? 'active' : 'hidden'}`;
                div.dataset.q = index + 1;
                div.innerHTML = `
                    <div class="question-number text-center">${String(index + 1).padStart(2, '0')}/40</div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-5 mb-8">
                        ${questions[index].map((text, i) => `
                            <div class="statement">
                                <input type="radio" name="q${index + 1}" value="${types[i]}" class="hidden">
                                <label class="block font-medium">${text}</label>
                            </div>
                        `).join('')}
                    </div>
                    <div class="flex justify-${index === 0 ? 'center' : 'between'}">
                        ${index > 0 ? `<button onclick="prevQ(${index + 1})" class="btn-secondary text-white rounded-lg transition shadow-md">Anterior</button>` : ''}
                        <button onclick="${index === 39 ? 'showResults()' : `nextQ(${index + 1})`}" class="btn-primary text-white transition shadow-lg ${responses[index] === null ? 'opacity-60 cursor-not-allowed' : ''}">
                            ${index === 39 ? 'Ver Resultado' : 'Próxima'}
                        </button>
                    </div>
                `;
                container.appendChild(div);
            });

            document.querySelectorAll('.statement').forEach(adj => {
                adj.addEventListener('click', (e) => {
                    const radio = adj.querySelector('input');
                    if (radio) {
                        radio.checked = true;
                        const qNum = parseInt(radio.name.match(/\d+/)[0]) - 1;
                        responses[qNum] = types.indexOf(radio.value);
                        updateSelection(qNum);
                    }
                });
            });
        }

        function updateSelection(q) {
            const question = document.querySelector(`[data-q="${q + 1}"]`);
            const statements = question.querySelectorAll('.statement');
            statements.forEach(stmt => {
                const radio = stmt.querySelector('input');
                stmt.classList.toggle('selected', radio.checked);
            });
            const nextBtn = question.querySelector('.btn-primary');
            nextBtn.disabled = responses[q] === null;
            nextBtn.classList.toggle('opacity-60', responses[q] === null);
            nextBtn.classList.toggle('cursor-not-allowed', responses[q] === null);
        }

        function loadQuestion(index) {
            document.querySelectorAll('.question').forEach(q => q.classList.add('hidden'));
            document.querySelector(`[data-q="${index + 1}"]`).classList.remove('hidden');
            document.querySelector(`[data-q="${index + 1}"]`).classList.add('active');
            updateSelection(index);
        }

        function nextQ(qNum) {
            const index = qNum - 1;
            if (responses[index] === null) {
                alert('Por favor, selecione uma afirmação.');
                return;
            }
            if (index === 39) {
                showResults();
            } else {
                current++;
                loadQuestion(current);
            }
        }

        function prevQ(qNum) {
            if (current > 0) {
                current--;
                loadQuestion(current);
            }
        }

        function showResults() {
            const scores = { C: 0, S: 0, M: 0, F: 0 };
            responses.forEach(resp => {
                if (resp !== null) scores[types[resp]]++;
            });

            const total = Object.values(scores).reduce((a, b) => a + b, 0);
            const pct = {
                C: Math.round((scores.C / total) * 100),
                S: Math.round((scores.S / total) * 100),
                M: Math.round((scores.M / total) * 100),
                F: Math.round((scores.F / total) * 100)
            };

            const sum = Object.values(pct).reduce((a, b) => a + b, 0);
            if (sum !== 100) pct.C += (100 - sum);

            setTimeout(() => {
                const maxHeight = 280;
                document.getElementById('bar-colerico').style.height = `${(pct.C / 100) * maxHeight}px`;
                document.getElementById('val-colerico').textContent = `${pct.C}%`;
                document.getElementById('bar-sanguineo').style.height = `${(pct.S / 100) * maxHeight}px`;
                document.getElementById('val-sanguineo').textContent = `${pct.S}%`;
                document.getElementById('bar-melancolico').style.height = `${(pct.M / 100) * maxHeight}px`;
                document.getElementById('val-melancolico').textContent = `${pct.M}%`;
                document.getElementById('bar-fleumatico').style.height = `${(pct.F / 100) * maxHeight}px`;
                document.getElementById('val-fleumatico').textContent = `${pct.F}%`;
            }, 300);

            const sorted = Object.entries(pct).sort((a, b) => b[1] - a[1]);
            const primary = sorted[0][0];
            const secondary = sorted[1][0];

            const info = {
                C: { name: 'Colérico', color: 'border-red-500', desc: 'Líder natural, determinado, focado em resultados. Pode ser impaciente ou dominante.', examples: 'Empreendedor, gerente de projetos, militar.' },
                S: { name: 'Sanguíneo', color: 'border-orange-500', desc: 'Extrovertido, animado, criativo. Pode ser impulsivo ou desorganizado.', examples: 'Vendedor, apresentador, professor.' },
                M: { name: 'Melancólico', color: 'border-green-500', desc: 'Analítico, perfeccionista, leal. Pode ser crítico ou pessimista.', examples: 'Programador, escritor, engenheiro.' },
                F: { name: 'Fleumático', color: 'border-blue-500', desc: 'Calmo, paciente, diplomático. Pode ser passivo ou indeciso.', examples: 'Conselheiro, administrador, enfermeiro.' }
            };

            const p = info[primary];
            const s = info[secondary];
            document.getElementById('dominant-section').innerHTML = `
                <div class="temperament-card ${p.color}">
                    <h3 class="text-2xl font-bold text-gray-800">Temperamento Primário: ${p.name} (${pct[primary]}%)</h3>
                    <p class="mt-2">${p.desc}</p>
                    <p class="mt-2"><strong>Exemplos cotidianos:</strong> ${p.examples}</p>
                </div>
                <div class="temperament-card ${s.color} mt-6">
                    <h3 class="text-2xl font-bold text-gray-800">Temperamento Secundário: ${s.name} (${pct[secondary]}%)</h3>
                    <p class="mt-2">${s.desc}</p>
                    <p class="mt-2"><strong>Exemplos cotidianos:</strong> ${s.examples}</p>
                    <p class="mt-3"><strong>Combinação:</strong> Essa mistura traz equilíbrio entre ${p.name.toLowerCase()} e ${s.name.toLowerCase()}.</p>
                </div>
            `;

            window.userData = {
                nome: document.getElementById('nome').value.trim(),
                idade: document.getElementById('idade').value.trim(),
                profissao: document.getElementById('profissao').value.trim(),
                email: document.getElementById('email').value.trim(),
                pct,
                primary,
                secondary,
                p,
                s,
                info
            };

            document.getElementById('test').classList.add('hidden');
            document.getElementById('results').classList.remove('hidden');

            // Mudar botão para verde (simbólico, já estamos nos resultados)
            const lastBtn = document.querySelector('.btn-primary');
            if (lastBtn) lastBtn.classList.add('result-mode');

            setTimeout(generatePDF, 1200);
        }

        async function generatePDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF('p', 'mm', 'a4');
            const data = window.userData;

            // Página 1: captura exata do resultado
            const resultEl = document.getElementById('results');
            const canvas = await html2canvas(resultEl, { scale: 2, useCORS: true });
            const imgData = canvas.toDataURL('image/png');
            const imgProps = doc.getImageProperties(imgData);
            const pdfWidth = doc.internal.pageSize.getWidth();
            const pdfHeight = (imgProps.height * pdfWidth) / imgProps.width;
            doc.addImage(imgData, 'PNG', 0, 0, pdfWidth, pdfHeight);

            // Página 2: explicações detalhadas
            doc.addPage();
            doc.setFontSize(22);
            doc.text('Explicações Detalhadas dos Temperamentos', 20, 20);
            doc.setFontSize(12);
            let y = 40;
            const temperaments = ['C', 'S', 'M', 'F'];
            temperaments.forEach(key => {
                const t = data.info[key];
                doc.setFontSize(16);
                doc.text(`${t.name} (${data.pct[key]}%)`, 20, y);
                y += 8;
                doc.setFontSize(12);
                doc.text(t.desc, 20, y, { maxWidth: 170 });
                y += 12;
                doc.text(`Exemplos: ${t.examples}`, 20, y, { maxWidth: 170 });
                y += 20;
            });

            const pdfName = `resultado_temperamento_${data.nome.replace(/\s+/g, '_')}.pdf`;
            doc.save(pdfName);

            // E-mail
            const subject = encodeURIComponent(`Resultado do Teste de Temperamento - ${data.nome}`);
            const body = encodeURIComponent(
                `Olá! Aqui está meu resultado do Teste de Temperamento.\n\n` +
                `Nome: ${data.nome}\nIdade: ${data.idade}\nProfissão: ${data.profissao}\nEmail: ${data.email}\n\n` +
                `Perfil: ${data.p.name} com traços de ${data.s.name}\n\n` +
                `O PDF com o resultado completo foi salvo automaticamente.`
            );
            window.location.href = `mailto:impulsoflow@gmail.com?subject=${subject}&body=${body}`;

            setTimeout(() => {
                alert(`PDF salvo como "${pdfName}".\nA janela de e-mail foi aberta.`);
            }, 600);
        }
    </script>
</body>
</html>
